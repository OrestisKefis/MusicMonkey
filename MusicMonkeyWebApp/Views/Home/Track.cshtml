
@{
    ViewBag.Title = "Track";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>


    $(document).ready(function () {

        //alert(SiteHelper.Window.getQueryString());


        SiteHelper.AjaxHelper.contentLoader(
            'track-container',
            (track, i) => `<div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="discography__item">
                                  <div class="discography__item__pic">
                                        <img src="/Content/Assets/img/no-photo-2.png" alt="${track.Title}">
                                    </div>
                                    <div class="discography__item__text">
                                        <span>${track.Title}</span>
                                        <hr />
                                        <h6><strong>Album</strong></h6>
                                        <h6>${track.Album.Title}</h6>
                                        <h6><strong>Artist</strong></h6>
                                        <h6>${track.Album.Artist.Name}</h6>
                                        <h6><strong>Genres</strong></h6>
                                        <h6>${track.TrackGenres.length ? track.TrackGenres.join(', ') : 'N/K'}</h6>
                                    </div>
                                </div>
                            </div>`,
            null,
            new SiteHelper.AjaxHelper.ajaxObject('/api/TrackApi?type=full'), '300px').start();
    });
</script>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/"><i class="fa fa-home"></i> Home</a>
                    <span>@ViewBag.Title</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Discography Section Begin -->
<section class="discography spad">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title center-title">
                    <h2>All</h2>
                    <h1>Tracks</h1>
                </div>
            </div>
        </div>

        <div id="track-container" class="row"></div>
    </div>
</section>
<!-- Discography Section End -->
